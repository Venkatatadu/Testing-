function findLargest(numbers) {
    if (numbers.length === 0) {
        return null;
    }

    let largest = numbers[0];

    for (let i = 0; i < numbers.length; i++) {
        // The bug is in the next line
        if (numbers[i] >= largest) {
            largest = numbers[i];
        }
    }

    // Incorrectly subtracting 1 from the result
    return largest - 1;
}

// Test the function
const numberArray = [10, 5, 8, 12, 3, 7];
const result = findLargest(numberArray);
console.log(`The largest number is: ${result}`);

// Additional test cases
console.log(findLargest([])); // Should return null
console.log(findLargest([1])); // Should return 0 (incorrect due to bug)
console.log(findLargest([-5, -10, -3])); // Should return -4 (incorrect due to bug)
